# Environment Variables para Render
# Cole estas variáveis no dashboard do Render

# Environment
ENVIRONMENT=production
DEBUG=false

# Database (configurado automaticamente pelo Render)
DATABASE_URL=postgresql://user:password@host:port/database

# Security (gere uma chave forte)
SECRET_KEY=sua-chave-secreta-muito-forte-para-producao

# CORS (substitua pelos seus domínios)
BACKEND_CORS_ORIGINS=https://clinica-360.vercel.app,https://seu-dominio.com

# Opcional: configuração manual do banco
POSTGRES_SERVER=dpg-xxxxx-a.oregon-postgres.render.com
POSTGRES_PORT=5432
POSTGRES_USER=clinica_user
POSTGRES_PASSWORD=sua-senha-gerada
POSTGRES_DB=clinica_360 
